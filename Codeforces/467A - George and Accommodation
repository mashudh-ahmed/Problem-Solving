#include <iostream>
using namespace std;

int main()
{

    int n;
    cin>>n;


    int p [n];
    int q [n];

    int count = 0;

    for (int i=1; i<=n; i++)
    {
        cin>> p[i]>>q[i];


            if (p[i] <= q[i] -2)
            {
                count ++;
            }

    }

    cout<< count <<endl;

    return 0;
}
