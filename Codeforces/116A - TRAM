#include <bits/stdc++.h>
using namespace std;
 
int main ()
{
    int n;
    cin>>n;
 
    int Aseat = 0;
    int count = 0;
 
    while (n--)
    {
 
        int A;
        int B;
 
        for (int i = 0; i<n; i++)
        {
            cin>> A>> B;
 
            count -= A;
            count += B;
 
          if (count > Aseat)
          {
 
           Aseat = count;
          }
        }
        
 
    }
     cout<< Aseat <<endl;
 
    return 0;
}
